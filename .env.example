# Release Manager Environment Configuration
# Copy this file to .env and fill in the actual values for your environment

# =============================================================================
# Environment Settings
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL database connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://release_manager_user:password@localhost:5432/release_manager_dev

# Database connection pool size
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# =============================================================================
# Redis Configuration
# =============================================================================
# Redis connection URL for caching and job queues
# Format: redis://:password@host:port/db
REDIS_URL=redis://localhost:6379/0

# Redis settings
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# =============================================================================
# AWS Configuration
# =============================================================================
# AWS Region for S3 and other services
AWS_REGION=us-east-1

# AWS S3 bucket for artifact storage
AWS_S3_BUCKET=release-manager-artifacts

# AWS S3 bucket prefix for organizing artifacts
AWS_S3_PREFIX=releases/

# AWS access credentials (use IAM roles in production)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# =============================================================================
# GCP Configuration
# =============================================================================
# Google Cloud Project ID
GCP_PROJECT_ID=your-gcp-project-id

# Google Cloud Region for Cloud Run deployments
GCP_REGION=us-central1

# GCP service account key (JSON format, base64 encoded in CI/CD)
GCP_SA_KEY={}

# GCP Workload Identity Federation provider
GCP_WIF_PROVIDER=projects/PROJECT_ID/locations/global/workloadIdentityPools/POOL_ID/providers/PROVIDER_ID

# GCP service account for WIF
GCP_SERVICE_ACCOUNT=github-actions@PROJECT_ID.iam.gserviceaccount.com

# =============================================================================
# GitHub Configuration
# =============================================================================
# GitHub personal access token for API operations
GITHUB_TOKEN=your-github-token

# GitHub repository owner
GITHUB_OWNER=your-org

# GitHub repository name
GITHUB_REPO=release-manager

# =============================================================================
# Authentication & Security
# =============================================================================
# JWT secret key for token signing (should be long and random)
JWT_SECRET_KEY=your-very-long-random-secret-key-change-in-production

# JWT token expiration time in seconds (default: 24 hours)
JWT_EXPIRATION_SECONDS=86400

# CORS allowed origins (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# CSRF token secret
CSRF_SECRET=your-csrf-secret-key

# =============================================================================
# Backend API Configuration
# =============================================================================
# Backend service host and port
BACKEND_HOST=localhost
BACKEND_PORT=8000

# Backend service base URL
BACKEND_URL=http://localhost:8000

# API rate limiting (requests per minute)
API_RATE_LIMIT=100

# =============================================================================
# Frontend Configuration
# =============================================================================
# Frontend service host and port
FRONTEND_HOST=localhost
FRONTEND_PORT=3000

# Frontend service base URL
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json, text
LOG_FORMAT=json

# =============================================================================
# Email Configuration
# =============================================================================
# SMTP server for sending emails
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True

# SMTP credentials
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email configuration
EMAIL_FROM_ADDRESS=noreply@release-manager.example.com
EMAIL_FROM_NAME=Release Manager

# =============================================================================
# Slack Integration
# =============================================================================
# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Slack channel for deployment notifications (optional, uses webhook default if not set)
SLACK_CHANNEL=#deployments

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable features
FEATURE_SLACK_NOTIFICATIONS=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_WEBHOOK_INTEGRATION=true
FEATURE_CUSTOM_WORKFLOWS=true

# =============================================================================
# Release Configuration
# =============================================================================
# Default release strategy (semantic, calendar, custom)
DEFAULT_RELEASE_STRATEGY=semantic

# Enable automatic release creation on tag push
AUTO_CREATE_RELEASES=true

# Enable automatic changelog generation
AUTO_GENERATE_CHANGELOG=true

# =============================================================================
# Security Configuration
# =============================================================================
# Enable HTTPS only (should be true in production)
HTTPS_ONLY=false

# Enable security headers
ENABLE_SECURITY_HEADERS=true

# Allow localhost access without authentication (development only)
ALLOW_LOCALHOST_BYPASS=true

# =============================================================================
# Staging Environment Secrets
# =============================================================================
# Staging database URL (different from development)
STAGING_DATABASE_URL=postgresql://release_manager_user:password@staging-db.example.com:5432/release_manager_staging

# Staging Redis URL
STAGING_REDIS_URL=redis://staging-redis.example.com:6379/0

# =============================================================================
# Production Environment Secrets
# =============================================================================
# Production database URL
PRODUCTION_DATABASE_URL=postgresql://release_manager_user:password@prod-db.example.com:5432/release_manager_prod

# Production Redis URL
PRODUCTION_REDIS_URL=redis://prod-redis.example.com:6379/0

# =============================================================================
# Docker Configuration
# =============================================================================
# Docker registry configuration
DOCKER_REGISTRY=us-central1-docker.pkg.dev
DOCKER_USERNAME=_json_key
DOCKER_PASSWORD={}

# =============================================================================
# Alembic Database Migration
# =============================================================================
# Alembic migration script location
ALEMBIC_SCRIPT_LOCATION=./alembic

# =============================================================================
# Health Check Configuration
# =============================================================================
# Health check endpoint path
HEALTH_CHECK_PATH=/health

# Health check timeout in seconds
HEALTH_CHECK_TIMEOUT=10

# Number of health check retries
HEALTH_CHECK_RETRIES=3

# =============================================================================
# Miscellaneous
# =============================================================================
# Application name
APP_NAME=Release Manager

# Application version
APP_VERSION=1.0.0

# Debug mode (should be false in production)
DEBUG=false
